{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "strictNullChecks":false,
    "noImplicitAny":false,
    "baseUrl":"",
    "paths":{
        "*.tsx":["*"]
    },
    "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ]
  },

  "include": [
    "src/**/*",
    "src/views/home/*"
  ],
  "exclude": [
      "*node_modules*"
  ]
}